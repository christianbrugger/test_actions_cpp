# Use the Google style in this project.
BasedOnStyle: Google

IndentWidth: 4
ColumnLimit: 90


---
Language:    	Cpp

UseTab: Never
SpaceBeforeCpp11BracedList: true
Standard: c++20

SeparateDefinitionBlocks: Always
# BreakBeforeBinaryOperators: NonAssignment 
AllowShortFunctionsOnASingleLine: Empty

IncludeBlocks: Regroup
IncludeCategories:
- Regex:    '^<(fmt/)'
  Priority: 3
- Regex:    '^<Q'
  CaseSensitive:   true
  Priority: 4
- Regex:    '^<'
  Priority: 5
- Regex:    '^"'
  Priority: 1
  SortPriority: 0


